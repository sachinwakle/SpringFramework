<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<!-- bean definitions here -->
	
	<bean id="triangle" class="com.sachin.springframework.base.injectobject.Triangle">
	    <property name="pointA" ref="point0"/>
	    <property name="pointB" ref="point1"/>
	    <property name="pointC" ref="point2"/>
	</bean>
	<bean id="point0" class="com.sachin.springframework.base.injectobject.Point">
		<property name="x" value="0"/>
		<property name="y" value="0"/>
	</bean>
	<bean id="point1" class="com.sachin.springframework.base.injectobject.Point">
		<property name="x" value="-20"/>
		<property name="y" value="0"/>
	</bean>
	<bean id="point2" class="com.sachin.springframework.base.injectobject.Point">
		<property name="x" value="0"/>
		<property name="y" value="78"/>
	</bean>
</beans>